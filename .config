# LiteCore Build Configuration File

# コンパイラ設定
CC: gcc
CXX: g++
CFLAGS: -Wall -Wextra -std=c99
CXXFLAGS: -Wall -Wextra -std=c++17
OPTIMIZATION: -O2

# デバッグ設定
DEBUG: y
DEBUG_SYMBOLS: y
VERBOSE_BUILD: n

# パス設定
SOURCE_DIR: kernel
BUILD_DIR: build
OUTPUT_DIR: bin
INCLUDE_DIR: include

# ビルドターゲット
TARGET_NAME: litecore
TARGET_TYPE: executable
STATIC_LIB: false